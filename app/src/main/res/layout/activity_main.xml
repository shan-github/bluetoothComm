<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relLayout">


    <Button
        android:id="@+id/on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enable"
        android:text="ON/OFF"
        android:layout_toRightOf="@id/btext"/>
    <TextView
        android:id="@+id/text"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discoverable:"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/btext"
        android:padding="10dp"
        android:layout_below="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Bluetooth::"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/dtext"
        android:padding="10dp"
        android:layout_below="@id/btext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devices:"
        android:textSize="10dp"/>
    <Button
        android:id="@+id/discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover"
        android:background="@drawable/btnripple"
        android:layout_toRightOf="@id/on"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/enable"
        android:layout_toRightOf="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dtext"
        android:padding="10dp"/>
    <Button
        android:id="@+id/snd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    <EditText
        android:id="@+id/message"
        android:hint="Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/discover"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/snd"/>

    </RelativeLayout>